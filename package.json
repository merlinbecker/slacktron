{
  "name": "slacktron",
  "version": "1.0.1",
  "description": "A template for a Slackbot using Azure Functions",
  "repository": {
    "url": "https://github.com/merlinbecker/slacktron"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "prestart": "npm run build",
    "start": "func start",
    "test": "jest --verbose",
    "test:coverage": "jest --coverage --coverageDirectory=\"./coverage\""
  },
  "dependencies": {
